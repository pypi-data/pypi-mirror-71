QSplitter::handle {
    background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, 
  stop:0 rgba(255, 255, 255, 0), 
  stop:.3 rgba(101, 104, 113, 235), 
  stop:.5 #5D9B05,
  stop:.66 rgba(101, 104, 113, 235), 
  stop:.99 rgba(255, 255, 255, 0));
  height: 3px;
}

#splitter_2 {
  width: 5px;
}

#splitter_2::handle {
  background-color: #2D3548;
  margin: 25px 3px 10px 3px;
  width: 5px;
}


