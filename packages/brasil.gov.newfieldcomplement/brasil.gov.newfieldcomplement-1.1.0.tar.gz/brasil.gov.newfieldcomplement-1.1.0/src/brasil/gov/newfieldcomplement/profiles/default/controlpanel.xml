<?xml version="1.0"?>
    <object
        name="portal_controlpanel"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="brasil.gov.newfieldcomplement"
        purge="False">

        <configlet
            title="Dynamic Vocabularies"
            action_id="dynamic_vocabularies"
            appId="brasil.gov.newfieldcomplement"
            category="Products"
            condition_expr=""
            url_expr="string:${portal_url}/@@dynamic-vocabularies"
            visible="True"
            i18n:attributes="title">
                <permission>brasil.gov.newfieldcomplement: Setup</permission>
        </configlet>

        <configlet
            title="Add portal_catalog Index"
            action_id="add-index-form"
            appId="brasil.gov.newfieldcomplement"
            category="Products"
            condition_expr=""
            url_expr="string:${portal_url}/@@add-index-form"
            visible="True"
            i18n:attributes="title">
                <permission>Manage portal</permission>
        </configlet>

</object>
