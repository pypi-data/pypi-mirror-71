<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n" lang="en" metal:use-macro="here/main_template/macros/master" i18n:domain="plone">
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:main_macro define-macro="content-core" tal:define="images view/album_images;
                albums view/album_folders">

        <div metal:define-macro="text-field-view" id="parent-fieldname-text" class="stx" tal:define="text view/text" tal:condition="text" tal:attributes="class view/text_class">
          <div metal:define-slot="inside" tal:replace="structure text">The body</div>
        </div>

        <metal:listingmacro define-macro="listing" tal:define="portal context/@@plone_portal_state/portal;
                  image_scale portal/@@image_scale">

          <!-- fix menu, because Plone toolbar always stays visible and moves it a bit to the left -->
          <style type="text/css">
            #spotlight .header { padding-right: 4em !important; }
          </style>

          <div class="flexbin flexbin-margin">
            <tal:images tal:repeat="image images">
                <a tal:define="scale python:image_scale.tag(image, 'image', scale='mini');"
                   tal:condition="scale"
                   tal:attributes="href string:${image/getURL}/@@images/image/large;
                                   title image/Description
                                   "
                   class="spotlight">
                  <img tal:replace="structure scale" />
                </a>
            </tal:images>
          </div>

          <div class="visualClear">            <!-- --></div>

          <div class="album_grid_images">
            <tal:albums tal:repeat="album albums">
              <div class="photoAlbumEntry photoAlbumFolder" tal:define="album_ob album/getObject;
                    subalbum_view nocall:album_ob/@@album_view;
                    random_image subalbum_view/album_random_image;
                    number_images subalbum_view/album_number_images" tal:condition="random_image">
                <div class="grid-item">
                  <a tal:attributes="href album/getURL;
                         title album/Description">
                    <span class="photoAlbumEntryWrapper">
                      <img tal:replace="structure python:image_scale.tag(random_image, fieldname='image', scale='thumb')" />
                    </span>
                    <span class="photoAlbumEntryTitle">
                      <tal:title content="album/Title">Title</tal:title>
          (                      <tal:number content="number_images" />
)
                    </span>
                  </a>
                </div>
              </div>
            </tal:albums>
          </div>

          <div class="visualClear">            <!-- --></div>

          <div metal:use-macro="context/batch_macros/macros/navigation" />

          <metal:empty metal:define-slot="no_items_in_listing">
            <p class="discreet" tal:condition="python: not images and not albums" tal:content="view/no_items_message">
      There are currently no items in this folder.
            </p>
          </metal:empty>

          <!-- <script type="text/javascript"
            tal:attributes="src string:${view/navigation_root_url}/++plone++collective.photoswipe/node_modules/masonry-layout/masonry.js" /> -->

        </metal:listingmacro>

      </metal:main_macro>
    </metal:content-core>

  </body>
</html>

