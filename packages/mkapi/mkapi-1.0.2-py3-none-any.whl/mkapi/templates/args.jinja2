{% from 'macros.jinja2' import base_type -%}

<ul class="mkapi-args-list">
{% for item in section.items -%}
{% if 'strict' in filters or item.description.markdown -%}
<li{% if item.kind %} class="{{ item.kind }}"{% endif %}>{% if item.name %}<code class="mkapi-args-name">{{ item.html|safe }}</code>{% endif %}
{{ base_type(item) }}
<span class="mkapi-args-dash">&mdash;</span> <span class="mkapi-args-desc">{{ item.description.html|safe }}</span></li>
{% endif %}
{% endfor %}
</ul>
